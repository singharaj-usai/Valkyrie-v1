{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node@3.0.0"
    },
    {
      "src": "client/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/server.js"
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/client/$1" },
    { "source": "/(.*)", "destination": "/client/$1.html" }
  ]
}