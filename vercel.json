{
    "version": 2,
    "builds": [
      {
        "src": "server/server.js",
        "use": "@vercel/node@3.0.0"
      },
      {
        "src": "client/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/$1"
      }
    ],
    "env": {
        "MONGODB_URI": "@mongodb_uri"
      }
    }